<% content_for :title, "Contents" %>
<%#= params[:q]%>
<div class="flex items-center justify-between mbe-4">
  <div class="group" role="group" aria-label="Navigazione eventi">
    <%= link_to "Contenuti", contents_path, class: "btn btn--#{btn("contents", controller_name).html_safe}" %>
    <%= link_to "Dashboard", dashboard_path_for(:all), class: "btn btn--#{btn("dashboard", controller_name).html_safe}" %>
  </div>
  <%= render "dashboard/nav_dashboard"%>
</div>
<div class="overflow-x-hidden">
  <table class="table" id="contents">
    <caption>
      A list of content.
    </caption>
    <thead>
      <%= render 'dashboard/nav_dashboard_table' %>
      <tr>
        <!--td style="width: 105px;">Img</td-->
        <td>Title</td>
        <td>Pubblicazione</td>
        <td>Aggiornato</td>
        <td>Visibility</td>
        <% if params[:pubblicazione] != "pubblicato" %>
          <td>Stato</td>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @contents.order(:updated_at).each do |content| %>
        <%= render content %>
      <% end %>
    </tbody>
    <!--tfoot>
    <tr>
      <td colspan="3">Total</td>
      <td class="text-end">$2,500.00</td>
    </tr>
  <tfoot-->
  </table>
</div>
<%= render 'contents/pagy' %>